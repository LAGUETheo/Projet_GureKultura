{% extends 'base.html.twig' %}

{% block content %}
<!-- Contenu spécifique de chaque page -->
<div>
    <form>
        <div class="flex flex-col items-center bg-cover bg-no-repeat bg-[url('../asset/bg_img.svg')] gap-2 p-2 py-24">
            <div class="flex flex-col gap-3 w-full max-w-md p-8 bg-[#A23145] bg-opacity-70 rounded-lg shadow-lg">
                <h1 class="text-3xl font-bold text-white text-center mb-6">Connexion</h1>
                <form class="space-y-4 gap-2">
                    <div>
                        <input type="text" placeholder="Num. téléphone, nom d'utilisateur ou e-mail" 
                            class="w-full p-3 rounded-md bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-red-400">
                    </div> 
                    <div>
                        <input type="password" placeholder="Mot de passe" 
                            class="w-full p-3 rounded-md bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-red-400">
                        <a href="#" class="text-sm text-white mt-2 block text-right hover:underline">Mot de passe oublié ?</a>
                    </div>
                    <button type="submit" class="w-full p-3 bg-red-700 text-white font-semibold rounded-md hover:bg-red-800 transition">Se connecter</button>
                </form>
                <div class="flex items-center my-4 ">
                    <hr class="w-full border-gray-300">
                    <span class="px-2 text-white">OU</span>
                    <hr class="w-full border-gray-300">
                </div>
            </div>
            <div class="w-full max-w-md p-8 bg-[#A23145] bg-opacity-70 rounded-lg shadow-lg">
                <div class="text-center">
                    <p class="text-white mb-4">Vous n'avez pas de compte ?</p>
                    <a href="#" class="w-full p-3 bg-white text-red-700 font-semibold rounded-md block hover:bg-gray-100 transition">Inscrivez-vous</a>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}