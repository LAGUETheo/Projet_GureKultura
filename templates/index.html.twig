{% extends "base.html.twig" %}

{% block content %}
<!-- Contenu spécifique de chaque page -->
<div class="pt-2">
    <div class="gap-2 p-2 grid grid-cols-12 items-center">
        
        {# titre de la page #}
        <h1 class="col-span-12 text-white lg:font-bold lg:text-4xl text-2xl text-center bg-[#A23145] rounded-2xl p-4 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] mb-10">Evénements du moment</h1>

        {# contenu #}

        {# faire une grid de 2 colonnes #}
        <div class="lg:grid lg:grid-cols-2 lg:auto-rows-fr lg:gap-4 col-start-1 col-span-12 flex flex-col justify-between md:grid md:grid-cols-2 md:auto-rows-fr md:gap-4">  
            {% for event in events %}
            <div class="lg:p-2 lg:grid lg:grid-cols-6 lg:auto-cols-min lg:items-center rounded-2xl bg-[#A23145] drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                {# Image de l'événement #}
                <img src="../asset/evenement/{{ event.img }}" alt="Image de l'événement" class=" lg:row-start-1 lg:col-start-1 lg:col-span-2 lg:w-full  rounded-2xl row-start-1 col-start-1 col-span-12 w-full md:rounded-2xl md:row-start-1 md:col-start-1 md:col-span-12 md:w-full">
                
                {# Infos de l'événement #}
                <div class="lg:grid lg:grid-cols-subgrid lg:col-start-3 lg:col-span-2 lg:flex-col lg:w-[250px] text-white lg:gap-2 lg:p-4">
                    <h3 class="lg:font-bold lg:text-xl lg:row-start-1 lg:col-span-2 lg:text-left break-words row-start-1 col-start-1 col-span-12 text-center text-lg md:row-start-1 md:col-start-1 md:col-span-12 md:text-center">{{ event.titre }}</h3>
                    {# Rajouter date et lieu  #}
                </div>
                
                {# Bouton pour accéder à la page de l'événement #}
                <div class="lg:col-start-5 lg:col-span-2 lg:flex lg:flex-col lg:items-center lg:justify-center lg:gap-10 flex flex-row justify-between p-4 md:flex md:flex-row md:justify-between md:p-4">
                    <button class="bg-white text-[#A23145] rounded-2xl p-2 font-bold lg:row-start-3 lg:col-start-1 lg:col-span-2 flex justify-center items-center">Type d'événement</button>

                    {# Voir video moulin pour faire comme quand il clique sur une recette #}
                    <a href="details.php?id={{ event.id }}" class="text-white lg:text-md  font-bold row-start-3 col-start-8 col-span-2 flex justify-center items-center md:font-bold md:row-start-3 md:col-start-8 md:col-span-2 md:flex md:justify-center md:items-center">EN SAVOIR PLUS</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}  