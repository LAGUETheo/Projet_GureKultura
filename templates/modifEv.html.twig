{% extends "base.html.twig" %}

{% block content %}
	<!-- Contenu spécifique de chaque page -->
	<div class="m-2 gap-8 flex flex-col items-center">

    <h1 class="text-3xl font-bold text-center text-principal">Modifier mon évènement</h1>

	<form action="index.php?controlleur=modifEv&methode=validerFormModifEv" method="post" class="grid grid-cols-6 gap-2 bg-principal text-white rounded-xl w-fit p-4">
		<input type="hidden" name="evtId" value={{ evenementActuel.id }}>

		{# titre evenement #}
		<div class="grid grid-cols-subgrid row-start-1 col-start-1 col-span-6 p-2">
			<label for="titre" class="col-start-1 col-span-2">Titre</label>
			<input type="text" name="titre" id="titre" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.titre }}">
		</div>
		{# type evenement #}
		<div class="grid grid-cols-subgrid row-start-2 col-start-1 col-span-6 p-2">
			<label for="nomCategorie" class="col-start-1 col-span-2">Type</label>
			<!-- Dropdown Container -->
			<select name="cateId" id="nomCategorie" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg">
				<option class="text-gray-400" value="{{ evenementActuel.cateId }}" selected>{{ evenementActuel.categorie}}</option>
				{% for categorie in categories %}
					<option class="text-black" value="{{categorie.cateId}}" {% if evenementActuel.cateId == categorie.cateId %} selected {% endif %}>{{ categorie.nom }}</option>
				{% endfor %}
			</select>			
		</div>

		{# autorisations #}
		<div class="grid grid-cols-subgrid row-start-3 col-start-1 col-span-6 p-2">
			<label for="autorisation" class="col-start-1 col-span-2">Autorisations</label>
			<input type="file" name="autorisation" id="autorisation" class="col-start-3 col-span-4 bg-transparent" value="{{ evenementActuel.autorisation }}">
		</div>

		{# email #}
		<div class="grid grid-cols-subgrid row-start-4 col-start-1 col-span-6 p-2">
			<label for="email" class="col-start-1 col-span-2">Email</label>
			<input type="email" name="email" id="email" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.email }}">
		</div>

		{# telephone #}
		<div class="grid grid-cols-subgrid row-start-5 col-start-1 col-span-6 p-2">
			<label for="telephone" class="col-start-1 col-span-2">Téléphone</label>
			<input type="tel" name="tel" id="tel" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.tel }}">
		</div>

		{# nomResp #}
		<div class="grid grid-cols-subgrid row-start-6 col-start-1 col-span-6 p-2">
			<label for="nomResp" class="col-start-1 col-span-2">Nom du responsable</label>
			<input type="text" name="nomRep" id="nomRep" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.nomRep }}">
		</div>

		{# prenomResp #}
		<div class="grid grid-cols-subgrid row-start-7 col-start-1 col-span-6 p-2">
			<label for="prenomResp" class="col-start-1 col-span-2">Prénom du responsable</label>
			<input type="text" name="prenomRep" id="prenomRep" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.prenomRep }}">
		</div>

		{# description #}
		<div class="grid grid-cols-subgrid row-start-8 col-start-1 col-span-6 p-2">
			<label for="description" class="col-start-1 col-span-2">Description</label>
			<textarea name="description" id="description" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2">{{ evenementActuel.description }}</textarea>
		</div>


		{# dateDebut #}
		<div class="grid grid-cols-subgrid row-start-9 col-start-1 col-span-6 p-2">
			<label for="dateDebut" class="col-start-1 col-span-2">Date de début</label>
			<input type="date" name="debutDate" id="debutDate" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.dateDebut}}">
		</div>

		{# HeureDebut #}
		<div class="grid grid-cols-subgrid row-start-10 col-start-1 col-span-6 p-2">
			<label for="heureDebut" class="col-start-1 col-span-2">Heure de début</label>
			<input type="time" name="debutHeure" id="debutHeure" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.heureDebut }}">
		</div>

		{# dateFin #}
		<div class="grid grid-cols-subgrid row-start-11 col-start-1 col-span-6 p-2">
			<label for="dateFin" class="col-start-1 col-span-2">Date de fin</label>
			<input type="date" name="finDate" id="finDate" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.dateFin }}">
		</div>

		{# HeureFin #}
		<div class="grid grid-cols-subgrid row-start-12 col-start-1 col-span-6 p-2">
			<label for="heureFin" class="col-start-1 col-span-2">Heure de fin</label>
			<input type="time" name="finHeure" id="finHeure" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ evenementActuel.heureFin }}">
		</div>

		{# Lieu #}
		<div class="grid grid-cols-subgrid row-start-13 col-start-1 col-span-6 p-2">
			<label for="lieu" class="col-start-1 col-span-2">Lieu</label>
			<textarea name="lieu" id="lieu" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2">{{ evenementActuel.lieu }}</textarea>
		</div>

		{# Photo #}
		<div class="grid grid-cols-subgrid row-start-14 col-start-1 col-span-6 p-2">
			<label for="photo" class="col-start-1 col-span-2">Photo</label>
			<input type="file" name="photo" id="photo" class="col-start-3 col-span-4 bg-transparent" value={{ evenementActuel.photo }}>
		</div>

		{# Bouton de validation ou annulation #}
		<div class="grid grid-cols-subgrid row-start-15 col-start-1 col-span-6 p-2">
			<button type="submit" class="col-start-3 col-span-2 bg-white text-principal rounded-lg">Valider</button>
			<a href="index.php?controlleur=mesEv&methode=lister" class="col-start-5 col-span-2 bg-white text-principal rounded-lg text-center">Annuler</a>
		</div>
	</form>
	</div>

{% endblock %}