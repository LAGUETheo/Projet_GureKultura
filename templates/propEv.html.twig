{% extends "base.html.twig" %}

{% block content %}
	<!-- Contenu spécifique de chaque page -->
	<div class="lg:pt-2">
		<div class="bg-cover bg-no-repeat bg-[url('../asset/bg_img.svg')] gap-2 p-2 grid grid-cols-12 items-center">

			{# titre de la page #}
			<h1 class="col-span-12 text-white lg:font-bold lg:text-4xl text-2xl text-center bg-[#A23145] rounded-2xl p-4 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] mb-10">Propose ton événement</h1>

			{# premiere ligne #}
			<form action="" class="col-start-1 col-span-12 flex flex-col gap-2">
				<div class="grid grid-cols-subgrid row-start-2 row-span-1 col-start-1 col-span-12 bg-[#A23145] bg-opacity-75 rounded-2xl p-4 w-full drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] gap-2">
					<label class="text-white lg:col-span-4 col-span-12 lg:text-lg text-sm">Quel est le nom de ton événement :</label>
					<input type="text" id="name" name="name" class="lg:col-span-8 lg:col-start-5 lg:row-start-1 row-start-2 col-span-12 border-2 border-[#A23145] rounded-lg lg:pl-2 pl-1 text-[#bfbfbf] w-auto drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] lg:py-2 py-1" placeholder="Saisir une description ...">
				</div>

				{# deuxieme ligne #}
				<div class="grid grid-cols-subgrid row-start-3 row-span-1 col-start-1 col-span-12 bg-[#A23145] bg-opacity-75 text-white rounded-2xl p-4 w-full drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] gap-2">
					<label class="text-white lg:col-span-4 col-span-12 lg:text-lg text-sm">Quel est le type de ton événement :</label>
					<input type="text" id="type" name="type" class="lg:col-span-8 lg:col-start-5 lg:row-start-1 row-start-2 col-span-12 border-2 border-[#A23145] rounded-lg lg:pl-2 pl-1 text-[#bfbfbf] w-auto drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] lg:py-2 py-1" placeholder="Fête, Cinéma, Concert, Sport ...">
				</div>

				{# colonne de gauche #}
				<div class="lg:grid lg:grid-cols-subgrid lg:row-start-4 lg:col-start-1 lg:col-span-6 lg:w-full lg:gap-2 lg:h-full col-start-1 col-span-12 row-start-4 flex flex-col gap-2">
					<div class="grid grid-cols-subgrid row-start-1 col-span-6 bg-[#A23145] bg-opacity-75 text-white rounded-2xl w-full p-4 items-center">
						<label class="row-start-1 text-white col-span-5">Joindre les autorisations essentielles (pdf, jpg, doc, ...)
						</label>
						<button class="row-start-2 col-start-5 col-span-2 flex items-center justify-center max-h-1 text-[#A23145] bg-[#ffffff] rounded-lg p-4 font-bold drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">Insérer</button>
					</div>

					{# bloc #}
					<div class="grid grid-cols-subgrid row-start-2 col-span-6 bg-[#A23145] bg-opacity-75 text-white rounded-2xl p-4 w-full gap-2 ">
						<h1 class="row-start-1 col-span-6 text-xl">
							Tes coordonnées :</h1>
						<div class="grid grid-cols-subgrid row-start-2 col-span-6  text-white rounded-2xl py-2 w-full items-center">
							<label class="text-white col-span-2">Email :</label>
							<input type="text" id="email" name="email" class="col-start-3 col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] py-2" placeholder="Saisir un email...">
						</div>

						<div class="grid grid-cols-subgrid row-start-3 col-span-6  text-white rounded-2xl py-2 w-full items-center">
							<label class="text-white col-span-2">Téléphone :</label>
							<input type="text" id="tel" name="tel" class="col-start-3 col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] py-2" placeholder="Saisir un téléphone...">
						</div>

						<div class="grid grid-cols-subgrid row-start-4 col-span-6  text-white rounded-2xl py-2 w-full items-center">
							<label class="text-white col-span-4">Nom du représentant de l'événement :</label>
							<input type="text" id="nomRep" name="nomRep" class="col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] py-2" placeholder="Saisir un nom...">
						</div>

						<div class="grid grid-cols-subgrid row-start-5 col-span-6  text-white rounded-2xl py-2 w-full items-center">
							<label class="text-white col-span-4">Prénom du représentant de l'événement :</label>
							<input type="text" id="prenomRep" name="prenomRep" class="col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] py-2" placeholder="Saisir un prénom...">
						</div>

						<div class="col-span-6 text-white rounded-2xl py-2 w-full items-center">
							<label class="inline-flex items-center cursor-pointer col-span-6 justify-between w-full">
								<span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300 max-w-md">Autorise-nous à pouvoir te contacter par mail ou téléphone si ton événement est retenus :</span>
								<div>
									<input type="checkbox" value="" class="sr-only peer">
									<div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
								</div>
							</label>
						</div>
					</div>
				</div>


				{# colonne de droite #}
				<div class="lg:grid lg:grid-cols-subgrid lg:row-start-4 lg:col-start-7 lg:col-span-6 lg:w-full lg:gap-2 col-start-1 col-span-12 row-start-5 flex flex-col gap-2 ">
					<div class="grid grid-cols-subgrid row-start-1 col-span-6 bg-[#A23145] bg-opacity-75 text-white rounded-2xl w-full p-4">
						<label class="text-white col-span-3 pb-3">Décris ton événement :</label>
						<input type="text" id="description" name="description" class="col-start-1 col-span-6 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full py-2" placeholder="Saisir une description ...">
					</div>

					{# premier bloc #}
					<div class="grid grid-cols-subgrid row-start-2 col-span-6 bg-[#A23145] bg-opacity-75 text-white rounded-2xl p-4 w-full">
						<h1 class="row-start-1 col-span-6 text-xl">
							Informations de ton événement :</h1>

						<div class="grid grid-cols-subgrid row-start-2 col-span-6  text-white rounded-2xl py-2 w-full items-center">
							<label class="text-white col-span-1">Du :</label>
							<input type="text" id="debutDate" name="debutDate" class="col-start-2 col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full py-2" placeholder="Saisir date début">
							<label class="text-white col-start-4 col-span-1">Au :</label>
							<input type="text" id="finDate" name="finDate" class="col-start-5 col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full py-2" placeholder="Saisir date fin">
						</div>

						<div class="grid grid-cols-subgrid row-start-3 col-span-6  text-white rounded-2xl py-2 w-full items-center">
							<label class="text-white col-span-1">Du :</label>
							<input type="text" id="debutHeure" name="debutHeure" class="col-start-2 col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full py-2" placeholder="Saisir heure début">
							<label class="text-white col-start-4 col-span-1">Au :</label>
							<input type="text" id="finHeure" name="finHeure" class="col-start-5 col-span-2 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full py-2" placeholder="Saisir heure fin">
						</div>

						<div class="grid grid-cols-subgrid row-start-4 col-span-6  text-white rounded-2xl py-2 w-full">
							<label class="text-white col-span-1">Lieu :</label>
							<input type="text" id="lieu" name="lieu" class="col-start-2 col-span-3 border-2 border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full py-2" placeholder="Saisir une adresse ...">
						</div>

						<div class="grid grid-cols-subgrid row-start-5 col-span-6  text-white rounded-2xl w-full py-2">
							<label class="text-white col-span-1">Photos :</label>
							<button class="col-start-6 col-span-1 flex items-center justify-center max-h-1 text-[#A23145] bg-[#ffffff] rounded-lg p-4 font-bold drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">Ajouter</button>
						</div>

					</div>

					{# deuxieme bloc #}
					<div class="grid grid-cols-subgrid row-start-3 col-start-1 col-span-6 bg-[#A23145] bg-opacity-75 text-white rounded-2xl p-4 w-full">
						<button class=" col-span-2 flex items-center justify-center max-h-1 text-[#A23145] bg-[#ffffff] rounded-lg p-4 font-bold drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">Besoin d'aide ?</button>
						<button class="col-start-5 flex items-center justify-center max-h-1 text-[#A23145] bg-[#ffffff] rounded-lg p-4 font-bold drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">Annuler</button>
						<button class="col-start-6 flex items-center justify-center max-h-1 text-[#A23145] bg-[#ffffff] rounded-lg p-4 font-bold drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">Valider</button>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
