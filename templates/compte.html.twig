{% extends "base.html.twig" %}

{% block content %}
<!-- Contenu spécifique de chaque page -->
<div class="h-full">
    <div class="flex flex-col items-left bg-cover bg-no-repeat bg-[url('../asset/bg_img.svg')] gap-2 p-2">
    <h1 class="text-center text-white font-bold text-5xl bg-[#A23145] rounded-2xl p-2 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] mb-10">Votre compte :</h1>
        <div class="flex flex-row gap-2 flex-1">
            <div class="flex flex-1 flex-col bg-[#A23145] bg-opacity-75 text-white rounded-2xl p-4">
                <h1 class="text-center text-white font-bold text-xl">Informations personnelles :</h1>
                <div class="flex text-white rounded-2xl py-2 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <label class="flex justify-left  text-white rounded-2xl">Email :</label>
                    <input type="text" id="mail" name="mail" class="border-2 border-solid border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]" placeholder="Saisir un email ...">
                </div>
                <div class="flex text-white rounded-2xl py-2 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <label class="flex justify-left  text-white rounded-2xl">Téléphone :</label>
                    <input type="text" id="tel" name="tel" class="border-2 border-solid border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full" placeholder="Saisir un téléphone ...">
                </div>
                <div class="flex text-white rounded-2xl py-2 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <label class="flex justify-left  text-white rounded-2xl">Nom du représentant de l'événement :</label>
                    <input type="text" id="replname" name="replname" class="border-2 border-solid border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full" placeholder="Saisir un email ...">
                </div>
                <div class="flex text-white rounded-2xl py-2 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <label class="flex justify-left text-white rounded-2xl">Prénom du représenant de l'événement :</label>
                    <input type="text" id="repfname" name="repfname" class="border-2 border-solid border-[#A23145] rounded-lg pl-2 text-[#bfbfbf] w-full" placeholder="Saisir un email ...">
                </div>
                <div class="flex text-white rounded-2xl py-2">
                    <label class="inline-flex items-center cursor-pointer">
                        <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300 max-w-md">Autorise-nous à pouvoir te contacter par mail ou téléphone si ton événement est retenus :</span>
