											<INPUT TYPE="SUBMIT" VALUE="{{ actualite.titre }}" class="text-black text-center text-wrap">
										
										<img src="../asset/actualite/{{ actualite.img }}" alt="illustration" class="h-full w-full object-cover rounded-lg">
