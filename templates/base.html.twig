		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="{% if description is defined %} {{description}} {% else %} {{constant('WEBSITE_DESCRIPTION')}} {% endif %}">
		<title>{{constant('WEBSITE_TITLE')}} {{ title }}</title>
		<script src="../js/aside.js"></script>
		<link rel="icon" type="image/x-icon" href="../asset/PetitLogoGkSansFondRouge.ico">
		<link href="../css/output.css" rel="stylesheet">
		<link href="../css/scrollbar.css" rel="stylesheet">
	</head>
	<body class="font-['Segoe UI'] min-h-dvh">
		<main class="flex flex-col">
			<!-- Header -->
			<header
				class="flex justify-between items-center min-h-16 px-7 bg-[#A23145] text-white">
				
				<!-- logo -->
				<a href="index.php?controlleur=index&methode=lister">
					<img src="../asset/PetitLogoGkSansFondBlanc.svg" alt="logo" class="max-w-10 max-h-10">
				</a>

				<!-- navbar -->
				<nav id="menu" class="flex flex-row justify-between items-center gap-4 md:gap-8 bg-[#A23145]">
					<div class="hidden md:flex md:flex-col md:items-center">
						<a href="index.php?controlleur=index&methode=lister" class=""><img src="../asset/icones/house.svg" alt="home" class="h-6 w-6"></a>
						<p class="hidden lg:block">Accueil</p>
					</div>

					<div class="flex flex-col items-center">
						<a href="index.php?controlleur=categorie&methode=lister" class=""><img src="../asset/icones/ui-checks-grid.svg" alt="cate" class="h-6 w-6"></a>
						<p class="hidden lg:block">Catégorie</p>
					</div>

					{% if user.estAdmin == False %}
					<div class="flex flex-col items-center">
						<a href="index.php?controlleur=propEv&methode=lister" class=""><img src="../asset/icones/file-plus.svg" alt="propEv" class="h-6 w-6"></a>
						<p class="hidden lg:block">Proposition</p>
					</div>
					{% else %}
					<div class="flex flex-col items-center">
						<a href="index.php?controlleur=propActu&methode=lister" class=""><img src="../asset/icones/file-plus.svg" alt="propActu" class="h-6 w-6"></a>
						<p class="hidden lg:block">Proposition</p>
					</div>
					{% endif %}

					{% if user.estAdmin == True %}
					<div class="flex flex-col items-center">
						<a href="index.php?controlleur=listeEv&methode=lister" class=""><img src="../asset/icones/layout-text-sidebar-reverse.svg" alt="listEv" class="h-6 w-6"></a>
						<p class="hidden lg:block">Proposition</p>
					</div>
					{% endif %}

					<div class="flex flex-col items-center">
						<a href="/" class=""><img src="../asset/icones/funnel.svg" alt="home" class="h-6 w-6"></a>
						<p class="hidden lg:block">Trier</p>
					</div>

					<div class="flex gap-2 items-center border-2 border-solid border-white rounded-full px-2 py-1">
						<img src="../asset/icones/search.svg" alt="serach" class="h-6 w-6">
						<input type="search" name="search" id="search" placeholder="Search" class="bg-transparent md:block hidden">
					</div>
					
				</nav>
				<!-- compte btn -->
				{% if user != null %} 
					<div class="flex items-center space-x-4">
						<span class="text-white"></span>
						<a href="index.php?controlleur=compte&methode=lister" class="flex items-center justify-center border-2 border-solid border-white rounded-full p-2">
