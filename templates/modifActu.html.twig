{% extends "base.html.twig" %}

{% block content %}
	<!-- Contenu spécifique de chaque page -->
	<div class="m-2 gap-8 flex flex-col">

    <h1 class="text-3xl font-bold text-center text-principal">Modifier mon actualité</h1>

	<form action="index.php?controlleur=modifActu&methode=validerFormModifActu" method="post" class="grid grid-cols-6 gap-2 bg-principal bg-opacity-55 text-white rounded-xl">
		<input type="hidden" name="actuId" value={{ actuActuel.id }}>

		{# titre evenement #}
		<div class="grid grid-cols-subgrid row-start-1 col-start-1 col-span-6 p-2">
			<label for="titre" class="col-start-1 col-span-2">Titre</label>
			<input type="text" name="titre" id="titre" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2" value="{{ actuActuel.titre }}">
		</div>
		{# type evenement #}
		<div class="grid grid-cols-subgrid row-start-2 col-start-1 col-span-6 p-2">
			<label for="nomCategorie" class="col-start-1 col-span-2">Type</label>
			<!-- Dropdown Container -->
			<select name="cateId" id="nomCategorie" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg">
				<option class="text-gray-400" value="{{ actuActuel.cateId }}" selected>{{ actuActuel.categorie}}</option>
				{% for categorie in categories %}
					<option class="text-black" value="{{categorie.cateId}}" {% if actuActuel.cateId == categorie.cateId %} selected {% endif %}>{{ categorie.nom }}</option>
				{% endfor %}
			</select>			
		</div>

		{# resume #}
		<div class="grid grid-cols-subgrid row-start-3 col-start-1 col-span-6 p-2">
			<label for="resume" class="col-start-1 col-span-2">Résumé</label>
			<textarea name="resume" id="resume" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2">{{ actuActuel.resume }}</textarea>
		</div>

		{# resume #}
		<div class="grid grid-cols-subgrid row-start-4 col-start-1 col-span-6 p-2">
			<label for="contenu" class="col-start-1 col-span-2">Contenu</label>
			<textarea name="contenu" id="contenu" class="col-start-3 col-span-4 bg-transparent border-white border-2 border-solid rounded-lg px-2">{{ actuActuel.contenu }}</textarea>
		</div>


		{# Image #}
		<div class="grid grid-cols-subgrid row-start-14 col-start-1 col-span-6 p-2">
			<label for="img" class="col-start-1 col-span-2">Photo</label>
			<input type="file" name="img" id="img" class="col-start-3 col-span-4 bg-transparent" value={{ evenementActuel.img }}>
		</div>

		{# Bouton de validation ou annulation #}
		<div class="grid grid-cols-subgrid row-start-15 col-start-1 col-span-6 p-2">
			<button type="submit" class="col-start-3 col-span-2 bg-principal bg-opacity-100 text-white rounded-lg">Valider</button>
			<a href="index.php?controlleur=mesActu&methode=lister" class="col-start-5 col-span-2 bg-principal bg-opacity-100 text-white rounded-lg text-center">Annuler</a>
		</div>
	</form>
	</div>

{% endblock %}