{% extends "base.html.twig" %}

{% block content %}
<!-- Contenu spécifique de chaque page -->
<div class="h-full">
    <div class="bg-white gap-4 p-2 grid grid-cols-12 items-center">
        
        {# titre de la page #}
        <h1 class="lg:col-start-3 lg:col-span-8 text-[#A23145] lg:font-bold lg:text-4xl text-center border-4 border-solid border-[#A23145] opacity-75 bg-white rounded-2xl p-4 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] text-lg col-start-1 col-span-12">BAYONNE - PERPIGNAN 14 DECEMBRE 2023 </h1>
        
        {# colonne de gauche #}
        <img src="../asset/bg_img.svg" class="row-start-2 col-start-1 col-span-6 h-full w-full gap-2 rounded-2xl drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]" loading="lazy">       

        {# colonne de droite #}
        <div class="grid grid-cols-subgrid lg:row-start-2 lg:col-start-7 lg:col-span-6 lg:w-full bg-[#A23145] opacity-75 lg:gap-1 lg:py-4 lg:h-full rounded-2xl lg:pr-3 row-start-3 col-start-1 col-span-12">
            <h1 class="row-start-1 col-span-6 text-white text-center text-2xl font-bold"> Choix des places</h1>

            <div class="grid grid-cols-subgrid lg:auto-cols-max lg:row-start-2 lg:col-span-6  text-white rounded-2xl lg:p-2 lg:w-full lg:items-center">
                <label class="text-white col-span-1 text-xl">TRIBUNE :</label>
                <select id="tribune" class="font-bold col-start-3 col-span-1 py-2 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <option value="keolis">KEOLIS</option>
                    <option value="nord">NORD</option>
                    <option value="honneur">HONNEUR</option>
                    <option value="europcar">EUROPCAR</option>
                </select>            
            </div>

            <div class="grid grid-cols-subgrid lg:auto-cols-max lg:row-start-3 lg:col-span-6 text-white rounded-2xl lg:p-2 lg:w-full lg:items-center">
                <label class="text-white col-span-2 text-xl">BLOC :</label>
                <select id="bloc" class="font-bold col-start-3 col-span-1 py-2 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <option value="blocA">Bloc A</option>
                    <option value="blocB">Bloc B</option>
                    <option value="blocC">Bloc C</option>
                </select>            
            </div>

            <div class="grid grid-cols-subgrid auto-cols-max row-start-4 col-span-6 text-white rounded-2xl p-2 w-full items-center">
                <label class="text-white col-span-2 text-xl">RANG :</label>
                <select id="rang" class="font-bold col-start-3 col-span-1 py-2 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <option value="rangA">Rang A</option>
                    <option value="rangB">Rang B</option>
                    <option value="rangC">Rang C</option>
                    <option value="rangD">Rang D</option>
                </select>            
            </div>

            <div class="grid grid-cols-subgrid auto-cols-max row-start-5 col-span-6 text-white rounded-2xl p-2 w-full items-center">
                <label class="text-white col-span-2 text-xl">NUMERO :</label>
                <input type="text" placeholder="Numéro" class="font-bold col-start-3 col-span-1 py-2 px-4 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] text-center" pattern="^(?:[1-9]|[1-2][0-9]|30)$" inputmode="numeric" required>
            </div>

            <button class="row-start-6 col-start-6 col-span-1 border-2 rounded-lg text-white text-center text-md font-bold" aria-label="Confirmer"> Confirmer </h1>
        </div>
    </div>
</div>       

{% endblock %}

{% block script %}
<script src="../js/tribune.js" defer></script>
{% endblock %}  

