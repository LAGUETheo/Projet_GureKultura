{% extends "base.html.twig" %}

{% block content %}
<!-- Contenu spÃ©cifique de chaque page -->
<div class="h-full">
    <div class="bg-white gap-4 p-2 grid grid-cols-12 items-center">
        
        {# titre de la page #}
        <h1 class="col-start-3 col-span-8 text-[#A23145] opacity-75 font-bold text-4xl text-center border-4 border-solid border-[#A23145] opacity-75 bg-white rounded-2xl p-4 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">BAYONNE - PERPIGNAN 14 DECEMBRE 2023 </h1>
        
        {# colonne de gauche #}
        <img src="../asset/bg_img.svg" class="row-start-2 col-start-1 col-span-6 h-full w-full gap-2 rounded-lg drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]" >       

        {# colonne de droite #}
        <div class="grid grid-cols-subgrid row-start-2 col-start-7 col-span-6 w-full bg-[#A23145] opacity-75 gap-1 py-4 h-full rounded-lg">
            <h1 class="row-start-1 col-span-6 text-white text-center text-2xl font-bold"> Choix des places</h1>

            <div class="grid grid-cols-subgrid auto-cols-max row-start-2 col-span-6  text-white rounded-2xl p-2 w-full items-center">
                <label class="text-white col-span-1 text-xl">TRIBUNE :</label>
                <select class="font-bold col-start-3 col-span-1 py-2 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <option value="keolis">KEOLIS</option>
                    <option value="nord">NORD</option>
                    <option value="honneur">HONNEUR</option>
                    <option value="europcar">EUROPCAR</option>
                </select>            </div>

            <div class="grid grid-cols-subgrid auto-cols-max row-start-3 col-span-6  text-white rounded-2xl p-2 w-full items-center">
                <label class="text-white col-span-2 text-xl">BLOC :</label>
                <select class="font-bold col-start-3 col-span-1 py-2 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <option value="bloc_a">Bloc A</option>
                    <option value="bloc_b">Bloc B</option>
                    <option value="bloc_c">Bloc C</option>
                </select>            
            </div>
            <div class="grid grid-cols-subgrid auto-cols-max row-start-4 col-span-6  text-white rounded-2xl p-2 w-full items-center">
                <label class="text-white col-span-2 text-xl">RANG :</label>
                <select class="font-bold col-start-3 col-span-1 py-2 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    <option value="rang_a">Rang A</option>
                    <option value="rang_b">Rang B</option>
                    <option value="rang_c">Rang C</option>
                    <option value="rang_d">Rang D</option>
                </select>            
            </div>
            <div class="grid grid-cols-subgrid auto-cols-max row-start-5 col-span-6  text-white rounded-2xl p-2 w-full items-center">
                <label class="text-white col-span-2 text-xl">NUMERO :</label>
                <input type="number" placeholder="Entrez numéro" class="font-bold col-start-3 col-span-1 py-2 px-4 border-solid border-2 border-[#B96574] rounded-lg text-black w-full bg-white drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] text-center" min="1" max="30" step="1" required>
            </div>

            <button class="row-start-6 col-start-5 col-span-1 border-2  rounded-lg text-[#bfbfbf] text-white text-center text-md font-bold"> Confirmer </h1>
        </div>
    </div>
</div>       

{% endblock %}
